<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp">
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp">

        <ImageView
            android:id="@+id/imgDialog"
            android:layout_width="150dp"
            android:layout_marginHorizontal="70dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_sucess"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/tituloDialogSucesso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/fonte_padrao"
            android:textSize="@dimen/Normal_Size"
            android:text="Sucesso!"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/imgDialog"/>

        <TextView
            android:id="@+id/subtituloDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tituloDialogSucesso"
            android:fontFamily="@font/fonte_padrao"
            android:textSize="@dimen/Mini_Size"
            android:layout_marginHorizontal="10dp"
            android:textAlignment="center"
            android:text="subtituloDialogg"
            android:layout_marginTop="15dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnContinuarDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_perfil"
            android:text="Continuar"
            android:padding="20dp"
            android:textColor="@color/white"
            android:fontFamily="@font/fonte_padrao"
            app:layout_constraintTop_toBottomOf="@id/subtituloDialog"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>