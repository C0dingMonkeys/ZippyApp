<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:theme="@style/Theme.Material3.DayNight.NoActionBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_app"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".PerfilActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/LayoutPerfil"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/PrimaryColor"
                    android:gravity="center_vertical"
                    android:paddingVertical="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageButton
                        android:id="@+id/imgBtnPerfil"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:backgroundTint="@android:color/transparent"
                        android:src="@drawable/ic_seta_voltar" />

                    <TextView
                        android:id="@+id/txtPerfilLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/TextColor"
                        android:fontFamily="@font/fonte_padrao"
                        android:padding="10dp"
                        android:text="@string/meu_perfil_titulo"
                        android:textSize="@dimen/Subtitulo_Size" />


                </LinearLayout>

                <TextView
                    android:id="@+id/txtNomeUsuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="50dp"
                    android:fontFamily="@font/fonte_padrao"
                    android:text="@string/ola_luiz_teste"
                    android:textSize="@dimen/TitulosMenu"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/LayoutPerfil" />

                <TextView
                    android:id="@+id/txtEmailUsuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/fonte_padrao"
                    android:text="@string/email_teste_perfil"
                    android:textSize="@dimen/mini_Size"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtNomeUsuario" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgFotoPerfil"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="50dp"
                    android:src="@drawable/justin"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/txtNomeUsuario"
                    app:layout_constraintTop_toBottomOf="@id/LayoutPerfil" />

                <LinearLayout
                    android:id="@+id/Buttons_perfil_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:paddingVertical="5dp"
                    android:showDividers="middle"
                    android:weightSum="2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txtEmailUsuario">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnMeusPedidos_perfil"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_weight="1"
                        android:textColor="@color/TextColor"
                        android:background="@drawable/bg_btn_perfil"
                        android:fontFamily="@font/fonte_padrao"
                        android:text="@string/btn_pedidos_perfil" />

                    <View
                        android:id="@+id/spacer"
                        android:layout_width="20dp"
                        android:layout_height="0dp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnMinhasSolicitacoes_perfil"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:layout_weight="1"
                        android:textColor="@color/TextColor"
                        android:background="@drawable/bg_btn_perfil"
                        android:fontFamily="@font/fonte_padrao"
                        android:text="@string/btn_solicitacoes_perfil"
                        android:textSize="13sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/Buttons_perfil_layout_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingVertical="5dp"
                    android:showDividers="middle"
                    android:weightSum="2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/Buttons_perfil_layout">


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnEditarPerfil_perfil"
                        android:layout_width="0dp"
                        android:textColor="@color/TextColor"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_btn_perfil"
                        android:fontFamily="@font/fonte_padrao"
                        android:text="@string/btn_editar_perfil"
                        android:textSize="13sp" />

                    <View
                        android:id="@+id/spacer2"
                        android:layout_width="20dp"
                        android:layout_height="0dp" />


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnPagamentos_perfil"
                        android:layout_width="0dp"
                        android:textColor="@color/TextColor"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_btn_perfil"
                        android:fontFamily="@font/fonte_padrao"
                        android:text="@string/pagamento_perfil" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/ButtonColor"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:paddingVertical="10dp"
                    android:paddingHorizontal="20dp"
                    app:layout_constraintTop_toBottomOf="@id/Buttons_perfil_layout_2">

                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/txtavaliacao11"
                        android:fontFamily="@font/fonte_padrao"
                        android:textColor="@color/TextColor"
                        android:layout_height="wrap_content"
                        android:text="@string/avaliacao_viajante_perfil"
                        android:layout_marginBottom="10dp"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:id="@+id/rvAvaliacao1"
                        android:layout_height="wrap_content"
                        android:scrollbars="horizontal"/>


                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>