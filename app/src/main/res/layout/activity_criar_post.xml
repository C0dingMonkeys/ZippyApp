<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_app"
    android:theme="@style/Theme.Material3.DayNight.NoActionBar"
    tools:context=".activityCriarPost">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/barraSuperiorLayoutPost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/PrimaryColor"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btnVoltarPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:backgroundTint="@android:color/transparent"
                android:src="@drawable/ic_seta_voltar" />

            <TextView
                style="@style/TextColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:fontFamily="@font/fonte_padrao"
                android:text="@string/titulo_criar_post"
                android:textSize="@dimen/Subtitulo_Size" />
        </LinearLayout>

        <TextView
            android:id="@+id/txtTituloPost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/fonte_padrao"
            android:text="Insira as informações sobre o que você deseja"
            android:textSize="@dimen/Subtitulo_Size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/barraSuperiorLayoutPost" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtTituloPost">

            <LinearLayout
                android:id="@+id/linearNomePost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/fonte_padrao"
                    android:text="Nome do Produto: *" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/LayoutNomePost"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:hintEnabled="false"
                    app:hintAnimationEnabled="false"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/TextEditNomePost"
                        android:hint="Notebook Acer Predator"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutPrecoPost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/fonte_padrao"
                    android:text="Valor do Produto*" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/LayoutPrecoPost"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    app:hintEnabled="false"
                    app:hintAnimationEnabled="false"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/TextEditPrecoPost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:hint="$2599"
                        android:singleLine="true" />

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutLinkPost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/fonte_padrao"
                    android:text="Link de referencia: *" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/LayoutLinkPost"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:hintEnabled="false"
                    app:hintAnimationEnabled="false"
                    android:layout_margin="10dp"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/TextEditLinkPost"
                        android:hint="https://amazon.com/d/aam917s"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/fonte_padrao"

                    android:text="Adicione uma foto do produto"
                    android:textSize="@dimen/Small_Size" />

                <ImageView
                    android:id="@+id/fotoProdutoPost"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_below="@+id/textView9"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="20dp"
                    android:src="@drawable/zippy_logo"
                    />

            </RelativeLayout>
            <LinearLayout
                android:id="@+id/layoutPaisOrigemPost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/fonte_padrao"
                    android:text="País de Origem: *" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/LayoutPaisOrigemPost"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:hintEnabled="false"
                    app:hintAnimationEnabled="false"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/TextEditPaisOrigemPost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Estados Unidos"/>
                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/fonte_padrao"
                        android:text="Cidade: *" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/LayoutCidadeOrigemPost"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView5"
                        android:layout_margin="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="-8dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        app:hintEnabled="false"
                        app:hintAnimationEnabled="false"
                       >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/TextEditCidadeOrigemPost"
                            android:layout_width="match_parent"
                            android:hint="Nova York"
                            android:layout_height="wrap_content" />
                    </com.google.android.material.textfield.TextInputLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"

                        android:fontFamily="@font/fonte_padrao"
                        android:text="Estado: *" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/LayoutEstadoOrigemPost"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView6"
                        android:layout_margin="10dp"
                        app:hintEnabled="false"
                        app:hintAnimationEnabled="false"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="-26dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/TextEditEstadoOrigemPost"
                            android:layout_width="match_parent"
                            android:hint="NY"
                            android:layout_height="wrap_content" />

                    </com.google.android.material.textfield.TextInputLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutPaisDestinoPost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/fonte_padrao"
                    android:text="País de Destino: *" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/LayoutPaisDestinoPost"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:hintEnabled="false"
                    app:hintAnimationEnabled="false"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/TextEditPaisDestinoPost"
                        android:layout_width="match_parent"
                        android:hint="Brasil"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="5">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3">

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/fonte_padrao"
                        android:text="Cidade: *" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/LayoutCidadeDestinoPost"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView7"
                        android:layout_margin="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="-8dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        app:hintEnabled="false"
                        app:hintAnimationEnabled="false"
                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/TextEditCidadeDestinoPost"
                            android:layout_width="match_parent"
                            android:hint="Santo André"
                            android:layout_height="wrap_content" />
                    </com.google.android.material.textfield.TextInputLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/fonte_padrao"
                        android:text="Estado: *" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/LayoutEstadoDestinoPost"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textView8"
                        android:layout_margin="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="-26dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        app:hintEnabled="false"
                        app:hintAnimationEnabled="false"
                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/TextEditEstadoDestinoPost"
                            android:layout_width="match_parent"
                            android:hint="SP"
                            android:layout_height="wrap_content" />

                    </com.google.android.material.textfield.TextInputLayout>
                </RelativeLayout>
            </LinearLayout>

            <com.google.android.material.checkbox.MaterialCheckBox
                android:layout_width="wrap_content"
                android:id="@+id/checkboxCaixaPost"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="Deseja o produto com Caixa?" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/testefuncao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TESTE"/>
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>