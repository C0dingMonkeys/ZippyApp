<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MenuItemStyle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/krona</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextAppearance">
        <item name="android:textSize">10sp</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>
    <style name="ErrorTextAppearance">
        <item name="android:textSize">13sp</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="fontFamily">@font/fonte_padrao</item>
    </style>

    <style name="BackgroundTextInput" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="shapeAppearanceOverlay">@style/BackgroundForma.MyApp.TextInputLayout.Rounded</item>
    </style>

    <style name="BackgroundForma.MyApp.TextInputLayout.Rounded" parent="">
        <item name="indicatorColor">@android:color/transparent</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintTextColor">#7d8b9f</item>

    </style>

    <style name="CornerCut" parent="">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyTopRight">rounded</item>
        <item name="cornerSizeTopLeft">15dp</item>
        <item name="cornerSizeTopRight">15dp</item>
    </style>
</resources>